{
	"info": {
		"_postman_id": "admin-user-controller-collection",
		"name": "Admin User Controller",
		"description": "API collection for Admin User management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "adminToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "userId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Get All Users - Basic",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/get",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "get"]
				}
			}
		},
		{
			"name": "Get All Users - With Pagination",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/get?page=0&size=10",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "get"],
					"query": [
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "10"
						}
					]
				}
			}
		},
		{
			"name": "Get Users by Role",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/get?role=CUSTOMER&page=0&size=10",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "get"],
					"query": [
						{
							"key": "role",
							"value": "CUSTOMER"
						},
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "10"
						}
					]
				}
			}
		},
		{
			"name": "Get User by ID",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/get/{{userId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "get", "{{userId}}"]
				}
			}
		},
		{
			"name": "Update User",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Updated User Name\",\n  \"role\": \"CUSTOMER\",\n  \"blocked\": false\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/edit/{{userId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "edit", "{{userId}}"]
				}
			}
		},
		{
			"name": "Delete User",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/delete/{{userId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "delete", "{{userId}}"]
				}
			}
		},
		{
			"name": "Block User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/create/block/{{userId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "create", "block", "{{userId}}"]
				}
			}
		},
		{
			"name": "Unblock User",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{adminToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/admin/users/create/unblock/{{userId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "admin", "users", "create", "unblock", "{{userId}}"]
				}
			}
		}
	]
}
