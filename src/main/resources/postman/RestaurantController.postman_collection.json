{
	"info": {
		"_postman_id": "restaurant-controller-collection",
		"name": "Restaurant Controller",
		"description": "API collection for Restaurant management endpoints",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"variable": [
		{
			"key": "baseUrl",
			"value": "http://localhost:8080",
			"type": "string"
		},
		{
			"key": "ownerToken",
			"value": "",
			"type": "string"
		},
		{
			"key": "restaurantId",
			"value": "",
			"type": "string"
		}
	],
	"item": [
		{
			"name": "Get All Restaurants - Basic",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/get",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "get"]
				}
			}
		},
		{
			"name": "Get All Restaurants - With Pagination",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/get?page=0&size=5",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "get"],
					"query": [
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "5"
						}
					]
				}
			}
		},
		{
			"name": "Search Restaurants",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/search?q=Italian&page=0&size=10",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "search"],
					"query": [
						{
							"key": "q",
							"value": "Italian"
						},
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "10"
						}
					]
				}
			}
		},
		{
			"name": "Get Restaurant by ID",
			"request": {
				"method": "GET",
				"header": [],
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/get/{{restaurantId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "get", "{{restaurantId}}"]
				}
			}
		},
		{
			"name": "Get My Restaurants (Owner)",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{ownerToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/owner?page=0&size=10",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "owner"],
					"query": [
						{
							"key": "page",
							"value": "0"
						},
						{
							"key": "size",
							"value": "10"
						}
					]
				}
			}
		},
		{
			"name": "Create Restaurant",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{ownerToken}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"New Restaurant\",\n  \"description\": \"A new restaurant description\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/create",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "create"]
				}
			}
		},
		{
			"name": "Update Restaurant",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{ownerToken}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"Updated Restaurant Name\",\n  \"description\": \"Updated restaurant description\"\n}"
				},
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/edit/{{restaurantId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "edit", "{{restaurantId}}"]
				}
			}
		},
		{
			"name": "Delete Restaurant",
			"request": {
				"method": "DELETE",
				"header": [
					{
						"key": "Authorization",
						"value": "Bearer {{ownerToken}}"
					}
				],
				"url": {
					"raw": "{{baseUrl}}/api/restaurants/delete/{{restaurantId}}",
					"host": ["{{baseUrl}}"],
					"path": ["api", "restaurants", "delete", "{{restaurantId}}"]
				}
			}
		}
	]
}
